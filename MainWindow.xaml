<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElTrompo"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="ElTrompo.MainWindow"
        mc:Ignorable="d"
        Title="Sistema" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblNombre" Content="Nombre Completo" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Height="26" Width="116"/>
        <Label x:Name="lblTelefono" Content="Telefono" HorizontalAlignment="Left" Margin="120,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.182,0.5"/>
        <Label x:Name="lblCelSec" Content="Celular" HorizontalAlignment="Left" Margin="15,82,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCorreo" Content="Correo Electronico" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,82,0,0"/>
        <Label x:Name="lblMunicipio" Content="Municipio" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="155,138,0,0"/>
        <Label x:Name="lblEstado" Content="Estado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,138,0,0"/>
        <Label x:Name="lblColonia" Content="Colonia" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,139,0,0" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.015"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblTurno" Content="Turno" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="238,191,0,0"/>
        <Label x:Name="lblSector" Content="Sector" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,191,0,0"/>
        <Label x:Name="lblClave" Content="Clave" HorizontalAlignment="Left" Margin="306,28,0,0" VerticalAlignment="Top" Width="44"/>
        <ComboBox x:Name="cbSector" HorizontalAlignment="Left" Margin="65,195,0,0" VerticalAlignment="Top" Width="110" RenderTransformOrigin="-0.473,-1.455"/>
        <ComboBox x:Name="cbTurno" HorizontalAlignment="Left" Margin="300,195,0,0" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="tbNombre" HorizontalAlignment="Left" Height="23" Margin="15,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <ComboBox x:Name="cbEstados" HorizontalAlignment="Left" Margin="15,164,0,0" VerticalAlignment="Top" Width="125" IsEditable="True"/>

        <xctk:MaskedTextBox x:Name="tbCelular" HorizontalAlignment="Left" Margin="15,108,0,0" TextWrapping="Wrap" Text="MaskedTextBox" VerticalAlignment="Top" Mask="(000) 000-0000" Height="25" Width="86"/>
        <TextBox x:Name="tbClave" HorizontalAlignment="Left" Height="23" Margin="310,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <xctk:MaskedTextBox x:Name="tbTelefono" HorizontalAlignment="Left" Margin="120,108,0,0" TextWrapping="Wrap" Text="MaskedTextBox" VerticalAlignment="Top" Mask="(000) 000-0000" Height="25" Width="86"/>
        <TextBox x:Name="tbCorreoElectronico" HorizontalAlignment="Left" Height="23" Margin="230,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="tbMunicipio" HorizontalAlignment="Left" Height="23" Margin="155,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="tbColonia" HorizontalAlignment="Left" Height="23" Margin="280,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
